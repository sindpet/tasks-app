<div class="container">
  <div class="row">
    <div class="col-9">
      <h1><%= t("activerecord.models.project", count: 2) %></h1>

      <div>
        <% @projects.each do |project| %>
          <%= render "project", project: project %>
        <% end %>
      </div>

      <% if @pagy.pages > 1 %>
        <div class="d-flex justify-content-center">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
