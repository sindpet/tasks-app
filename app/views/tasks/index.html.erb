<div class="container">
  <div class="row">
    <div class="col-9">
      <h1>Tasks</h1>
      <div class="d-flex justify-content-center">
        <div class="btn-group btn-group-justified" role="group">
          <%= link_to "All", request.params.except(:scope, :page), class: "btn btn-outline-dark" %>
          <%= link_to "Finished", request.params.except(:page).merge(scope: "finished"), class: "btn btn-outline-dark" %>
          <%= link_to "Unfinished", request.params.except(:page).merge(scope: "unfinished"), class: "btn btn-outline-dark" %>
        </div>
      </div>

      <div>
        <% @tasks.each do |task| %>
          <%= render "task", task: task %>
        <% end %>
      </div>

      <div class="d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
